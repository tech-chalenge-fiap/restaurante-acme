{
  "name": "tech-challenge-restaurante",
  "version": "0.0.1",
  "description": "Api responsável por gerenciar a aplicação do Restaurente Tech Challenge ",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "Ports and Adapters",
    "clean code",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "typeorm"
  ],
  "author": {
    "name": "any",
    "email": "any@any.com"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/application/main",
    "dev": "npm run docs && ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/application/main",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "check": "npm-check -s -u",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:integration": "npm t -- --config ./jest.integration.config.js",
    "test:coveralls": "npm run test:coverage && coveralls < coverage/lcov.info",
    "test:k6": "k6 run --vus 100 --duration 30s ./tests/infra/api/load-test-metrics.js",
    "docs": "npm run tsoa:routes && npm run tsoa:swagger",
    "tsoa:routes": "tsoa routes",
    "tsoa:swagger": "tsoa swagger",
    "typeorm:migrate": "typeorm migration:run"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.12.8",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@types/k6": "^0.48.0",
    "bcrypt": "^5.1.1",
    "brazilian-class-validator": "^0.1.6",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.0.0",
    "module-alias": "^2.2.3",
    "mysql2": "^3.7.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^4.1.3",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  }
}
